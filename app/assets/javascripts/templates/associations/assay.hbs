<li class="association-list-item">
    <input type="hidden" name="{{fieldName}}[][assay_id]" value="{{id}}"/>
    {{title}}
    {{#if direction}}
        <input type="hidden" name="{{fieldName}}[][direction]" value="{{direction.value}}"/>
    {{/if}}
    {{#if relationship_type}}
        {{#if relationship_type.value}}
            <input type="hidden" name="{{fieldName}}[][relationship_type_id]" value="{{relationship_type.value}}"/>
            <small>({{relationship_type.text}})</small>
        {{/if}}
    {{/if}}
    <a class="remove-association clickable" title="Remove assay">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    </a>
</li>
